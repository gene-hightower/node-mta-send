{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2021"],
    "target": "ES2020",
    "moduleResolution": "node",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
